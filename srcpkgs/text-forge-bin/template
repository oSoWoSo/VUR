pre_install() {
	mv 'Text Forge.x86_64' TextForge.x86_64
}

do_install() {
	vmkdir etc/text-forge
	vcopy action_scripts etc/text-forge/
	vcopy data etc/text-forge/
	vinstall icon.png 644 usr/share/pixmaps/
	vinstall TextForge.x86_64 755 etc/text-forge/
	vbin "${FILESDIR}/text-forge.sh" text-forge
}

post_install() {
	vdoc README.md
	vlicense LICENSE
}
