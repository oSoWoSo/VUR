do_install() {
	vbin Dooble dooble
	vinstall dooble.desktop 644 usr/share/applications
	vinstall Icons/Logo/dooble.png 644 usr/share/pixmaps
	vmkdir usr/share/dooble/translations
	vcopy "Translations/dooble_*.qm" usr/share/dooble/translations
	vlicense LICENSE
}
