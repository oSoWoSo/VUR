# Template file for 'surf'
pkgname=surf
version=2.1
revision=77
build_style="gnu-makefile"
hostmakedepends="pkg-config libxdg-basedir-devel xdg-utils"
makedepends="libwebkit2gtk41-devel gcr-devel libxdg-basedir-devel xdg-utils"
depends="xprop dmenu"
short_desc="Simple web browser based on WebKit/GTK+"
maintainer="Daniel Azevedo <daniazevedo77@posteo.net>"
license="MIT"
homepage="http://surf.suckless.org"
distfiles="http://dl.suckless.org/surf/$pkgname-$version.tar.gz"
checksum=72e582920ba25a646203e93c2d2331d87f03037a28894d6c7e99af00ee043257

post_install() {
	vlicense LICENSE
	install -Dm644 *.desktop -t ${DESTDIR}/usr/share/applications
	cp surf.png suckless-surf.png
	install -Dm644 suckless-surf.png -t ${DESTDIR}/usr/share/pixmaps
}
