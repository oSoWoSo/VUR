	vlicense COPYING
}

sratom-devel_package() {
	depends="serd-devel>=0.18.0 sord-devel lv2 sratom>=${version}_${revision}"
	short_desc+=" - Development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
