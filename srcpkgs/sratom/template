hostmakedepends="pkg-config doxygen python3-Sphinx python3-sphinxygen
 python3-lv2-theme"
makedepends="serd-devel sord-devel lv2"
short_desc="Library for serialising LV2 atoms to/from RDF (Turtle syntax)"
