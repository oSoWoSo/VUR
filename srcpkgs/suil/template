# Template file for 'suil'
pkgname=suil
version=0.10.24
revision=1
build_style=meson
hostmakedepends="pkg-config cmake lv2 qt5-host-tools qt5-devel
 qt6-base qt6-tools doxygen python3-Sphinx python3-sphinxygen python3-lv2-theme"
makedepends="gtk+-devel qt5-devel qt6-base-devel gtk+3-devel lv2 qt5-x11extras-devel"
short_desc="Lightweight C library for loading and wrapping LV2 plugin UIs"
maintainer="Orphaned <orphan@voidlinux.org>"
license="MIT"
homepage="https://gitlab.com/lv2/suil"
changelog="https://gitlab.com/lv2/suil/-/raw/master/NEWS"
distfiles="https://download.drobilla.net/suil-${version}.tar.xz"
checksum=0d15d407c8b1010484626cb63b3317ba0a012edf3308b66b0f7aa389bd99603b

post_install() {
	vlicense COPYING
}

suil-devel_package() {
	depends="suil>=${version}_${revision}"
	short_desc+=" - Development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
