# Template file for 'slock'
pkgname=slock
version=1.6
revision=77
#archs="i686 x86_64"
#build_wrksrc=
build_style=gnu-makefile
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="libXrandr-devel imlib2-devel"
makedepends="libXrandr-devel imlib2-devel"
depends=""
short_desc="slock with patches"
maintainer="Daniel Azevedo <daniazevedo77@posteo.net>"
license="MIT"
homepage="https://suckless.org"
#changelog=""
distfiles="https://dl.suckless.org/tools/slock-1.6.tar.gz"
checksum=233d22b8fa65fbdf8a05302863ee5b768ef425c57c88d12059ff15133ebc0e5c

if [ "$XBPS_TARGET_LIBC" = "glibc" ]; then
	makedepends+=" libxcrypt-devel"
fi

do_build() {
	[ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
	sed -i 's/CPPFLAGS =/CPPFLAGS +=/g' config.mk
	sed -i 's/CFLAGS =/CFLAGS +=/g' config.mk
	sed -i 's/LDFLAGS =/LDFLAGS +=/g' config.mk
	make CC=$CC INCS="-I." LIBS="-lX11 -lXext -lcrypt -lXrandr -lImlib2" ${makejobs}
}

do_install() {
	make PREFIX=/usr DESTDIR=$DESTDIR install
	vlicense LICENSE
}
