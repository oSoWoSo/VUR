post_install() {
	vinstall dist/azote.svg 644 /usr/share/pixmaps
	vcopy "dist/indicator_*.png" /usr/share/pixmaps
	vinstall dist/azote.desktop 644 usr/share/applications
	vlicense LICENSE-COLORTHIEF
}
