# Template file for 'flat-remix-icon-theme'
pkgname=flat-remix-icon-theme
version=2024.02.01
revision=3
build_style=gnu-makefile
metapackage=yes
depends="${pkgname}-black
 ${pkgname}-blue ${pkgname}-brown ${pkgname}-cyan ${pkgname}-green ${pkgname}-grey
 ${pkgname}-magenta ${pkgname}-orange ${pkgname}-red ${pkgname}-teal
 ${pkgname}-violet ${pkgname}-yellow"
short_desc="Icon theme inspired by material design with colorful palette"
maintainer="Kevin Figueroa <kfdevart@disroot.org>"
license="GPL-3.0-or-later"
homepage="https://github.com/daniruiz/flat-remix"
distfiles="${homepage}/archive/refs/tags/${version//./}.tar.gz"
checksum=f4ad5c51cfa72ccb6829b53f704529e96e44ef076fa58178132e56459a325702
repository=cereus-extra

