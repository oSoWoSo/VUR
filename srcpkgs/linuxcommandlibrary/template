}

do_install() {
	echo todo
	cp cli/build/libs/linuxcommandlibrary.jar /usr/bin/cli.jar
}


post_install() {
	vinstall cli/build/libs/linuxcommandlibrary.jar 644 /usr/bin/cli.jar
}

