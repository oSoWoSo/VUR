hostmakedepends="libcsys libcprime wayqt pkg-config qt5-qmake qt5 qt5-wayland qt5-svg qt5-tools-devel libdbusmenu-qt5-devel wayland-devel qt5ct"
makedepends="dfl-applications dfl-login1 dfl-ipc dfl-sni dfl-settings"
