post_install() {
	APP_NAME="Zed" DO_STARTUP_NOTIFY="true" APP_ICON="zed" APP_CLI="zedit" envsubst < crates/zed/resources/zed.desktop.in > crates/zed/resources/dev.zed.Zed.desktop
	vinstall crates/zed/resources/dev.zed.Zed.desktop 644 usr/share/applications
	vinstall crates/zed/resources/app-icon.png 644 usr/share/icons/hicolor/512x512/apps zed.png
}
