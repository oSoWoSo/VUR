revision=1
build_style=cargo
hostmakedepends="glib-devel pkg-config libadwaita-devel gtk4-devel gdk-pixbuf-devel libepoxy-devel fontconfig"
makedepends="glib libadwaita gtk4 gdk-pixbuf fontconfig libepoxy"
