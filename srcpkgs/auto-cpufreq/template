# Template file for 'auto-cpufreq'
pkgname=auto-cpufreq
version=1.6.2
revision=1
wrksrc=${pkgname}-${version}
build_style=python3-module
hostmakedepends="python3-setuptools python3-pip python3-wheel python3-devel"
depends="python3-psutil python3-click python3-distro"
short_desc="Automatic CPU speed & power optimizer for Linux"
maintainer="Lane Biocini <lane@mailbox.org>"
license="LGPL-3.0-or-later"
homepage="https://github.com/AdnanHodzic/auto-cpufreq"
distfiles="https://github.com/AdnanHodzic/auto-cpufreq/archive/v${version}.tar.gz"
checksum=9793b20809459109eebfe8fc13b96a96820a75dacd6ec1a26ca1d0fbbab6a497

pre_install() {
	vsed -i 's/usr\/local/usr/g' auto_cpufreq/core.py
}

post_install() {
	vinstall scripts/cpufreqctl.sh 755 usr/share/${pkgname}/scripts
	vsv auto-cpufreq
}
