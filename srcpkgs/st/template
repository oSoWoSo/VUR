# Template file for 'st'
pkgname=st
version=0.9.3
revision=77
#archs="i686 x86_64"
#build_wrksrc=
build_style=gnu-makefile
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="pkg-config"
makedepends="fontconfig-devel libX11-devel libXft-devel"
depends="ncurses st-terminfo-${version}_${revision}"
short_desc="st patched with alpha and dracula"
maintainer="Daniel Azevedo <daniazevedo77@posteo.net>"
license="MIT"
homepage="https://suckless.org"
#changelog=""
distfiles="https://dl.suckless.org/st/st-0.9.3.tar.gz"
checksum=9ed9feabcded713d4ded38c8cebf36a3b08f0042ef7934a0e2b2409da56e649b

pre_build() {
	mkdir -p ${DESTDIR}/usr/share/terminfo
	sed -i 's|Liberation Mono|Hack|' config.def.h
}

pre_install() {
	export TERMINFO=${DESTDIR}/usr/share/terminfo
}

post_install() {
	vdoc README
	vdoc FAQ
	vlicense LICENSE
	vinstall ${FILESDIR}/st.desktop 644 usr/share/applications/
}

st-terminfo_package() {
	short_desc+=" - terminfo data"
	pkg_install() {
		vmove usr/share/terminfo
	}
}
