do_install() {
	vmkdir /usr/bin
	for f in action chunkcheck dh q qget qrun quickemu quickfzf quickget quickreport quicktui; do
		vbin "$f"
	done
}

post_install() {
	vman docs/quickemu.1
	vman docs/quickemu_conf.5
	vman docs/quickget.1
	vdoc README.md
}
